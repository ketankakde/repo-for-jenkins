pipeline {
    agent any

    stages {
        stage('Pull') {
            steps {
                git branch: 'main', url: 'https://github.com/shubhamkalsait/EasyCRUD.git'
            }
        }

        stage('Build') {
            steps {
                sh '''
                cd backend
                mvn clean package -DskipTests
                cd target
                nohup java -jar student-registration-backend-0.0.1-SNAPSHOT.jar > app.log 2>&1 &
                '''
            }
        }
    }
}
