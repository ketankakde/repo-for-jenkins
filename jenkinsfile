pipeline {
    agent any

    stages {
        stage('Pull') {
            steps {
                git branch: 'main', url: 'https://github.com/shubhamkalsait/EasyCRUD.git'
            }
        }

        stage('Build') {
            steps {
                sh '''
                sudo cd /var/lib/jenkins/workspace/first-pipeline/backend
                sudo mvn clean package
                '''
            }
        }
    }
}
